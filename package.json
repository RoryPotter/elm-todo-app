{
  "name": "elm-todo-app",
  "version": "1.0.0",
  "description": "Todo App made in Elm following the TodoMVC Spec.",
  "main": "index.js",
  "author": "Rory Potter",
  "license": "MIT",
  "devDependencies": {
    "elm": "^0.19.1-3",
    "elm-analyse": "^0.16.5",
    "elm-format": "^0.8.2",
    "elm-hot": "^1.1.3",
    "node-elm-compiler": "^5.0.4",
    "parcel": "^2.0.0-alpha.3.1",
    "parcel-bundler": "^1.12.4",
    "sass": "^1.25.0"
  },
  "scripts": {
    "start": "parcel src/index.html",
    "check:elm": "elm make src/Main.elm --output=/dev/null",
    "check:analyse": "elm-analyse",
    "check:format": "elm-format . --validate",
    "build": "parcel build src/index.html"
  }
}
